{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest", 
    "^.+\\.jsx?$": "babel-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.{ts,js}", 
    "!src/main.ts" 
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}

